<UserControl x:Class="Octgn.TableTop.WpfApp.Controls.Stage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Octgn.TableTop.WpfApp.Controls"
             xmlns:tabletop="clr-namespace:Octgn.TableTop;assembly=Octgn.TableTop"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Stage}}}">
        <ItemsControl ItemsSource="{Binding Path=Game.Players}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type tabletop:Player}">
                    <TextBlock Text="{Binding Path=Name}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
